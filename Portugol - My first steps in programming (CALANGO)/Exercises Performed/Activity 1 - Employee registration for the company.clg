		escreval("Tudo certo! Você foi cadastrado com Sucesso. Estes são os seus dados:");
			escreval("Seu nome é ", nomeCompleto, ".");
		escreval("Nascido em ", datadeNascimento, ".");
			escreval("Com idade de ", idade, " anos.");
