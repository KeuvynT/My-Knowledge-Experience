			notaTotal = 0; // Variável para acumular a nota dos alunos
				para(estudante de 1 ate 50 passo 1) faca
					escreva("> Digite a nota do ", estudante, "º estudante: ");
						leia(nota); // Nota de entrada
						notaTotal = notaTotal + nota;
				fimPara
		media = notaTotal / 50;
	// Conclusion/Conclusão
		escreva("A média de notas da sua turma é ", media:3:3, "."); // Print of the total average of the grades/Impressão da média total das notas

